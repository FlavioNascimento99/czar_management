<% content_for :title, "Novo Projeto - CzarManagement" %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow">
      <div class="card-header">
        <h3 class="card-title mb-0">Novo Projeto</h3>
      </div>
      <div class="card-body">
        <%= form_with model: @project, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @project.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, "Nome do Projeto", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", required: true, 
                                placeholder: "Ex: Sistema de Vendas" %>
            <div class="invalid-feedback">
              Por favor, insira o nome do projeto.
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4, required: true,
                               placeholder: "Descreva os objetivos e escopo do projeto..." %>
            <div class="invalid-feedback">
              Por favor, insira a descrição do projeto.
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Criar Projeto", class: "btn btn-primary" %>
            <%= link_to "Cancelar", projects_path, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
