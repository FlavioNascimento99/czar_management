<% content_for :title, "Nova Tarefa - #{@project.name}" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-header">
        <h3 class="card-title mb-0">Nova Tarefa</h3>
        <small class="text-muted">Projeto: <%= @project.name %></small>
      </div>
      <div class="card-body">
        <%= form_with model: [@project, @task], local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @task.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, "Título da Tarefa", class: "form-label" %>
            <%= form.text_field :title, class: "form-control", required: true, 
                                placeholder: "Ex: Implementar sistema de login" %>
            <div class="invalid-feedback">
              Por favor, insira o título da tarefa.
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Descrição", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4, required: true,
                               placeholder: "Descreva detalhadamente o que precisa ser feito..." %>
            <div class="invalid-feedback">
              Por favor, insira a descrição da tarefa.
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :status, "Status", class: "form-label" %>
                <%= form.select :status, 
                    options_for_select([
                      ['Pendente', 'pendente'],
                      ['Em Andamento', 'em_andamento'],
                      ['Concluída', 'concluida']
                    ], 'pendente'), 
                    {}, { class: "form-select", required: true } %>
              </div>
            </div>
            
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :priority, "Prioridade", class: "form-label" %>
                <%= form.select :priority, 
                    options_for_select([
                      ['Baixa', 'baixa'],
                      ['Média', 'media'],
                      ['Alta', 'alta']
                    ], 'media'), 
                    {}, { class: "form-select", required: true } %>
              </div>
            </div>
            
            <div class="col-md-4">
              <div class="mb-3">
                <%= form.label :assigned_to_id, "Responsável", class: "form-label" %>
                <%= form.select :assigned_to_id, 
                    options_from_collection_for_select(@project_users, :id, :name), 
                    { prompt: "Selecione um responsável" }, 
                    { class: "form-select", required: true } %>
                <div class="invalid-feedback">
                  Por favor, selecione um responsável.
                </div>
              </div>
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= form.submit "Criar Tarefa", class: "btn btn-primary" %>
            <%= link_to "Cancelar", @project, class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
